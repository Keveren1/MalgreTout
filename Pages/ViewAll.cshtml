@model ViewAllModel
<style>
    body {
        background: none;
        /*background-color: #A9A9A9;*/
        background-color: #696969;
    }

    th, td {
        border: 1px solid white;
        text-align: center;
        width: auto;
    }

    p {
        text-align: center;
    }

    h1 {
        text-align: center;
    }

    .btn1 {
        /*background-color: #04AA6D;*/
        border: none;
        float: left;
        color: white;
        padding: 5px 10px;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        border-radius: 10%;
    }

    a1 {
        float: right;
        display: inline-block;
    }

    a {
        text-decoration: none;
    }
    p {
        text-align: center;
        color: white;
        outline-color: white;
    }
