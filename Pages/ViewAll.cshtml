</style>
<h2>MalgreToutDatabase</h2>

<p>
    <a class="btn btn-primary" href="/Create">Opret ny</a>
</p>

<form>
    <p>
        Søg navn: <input type="text" asp-for="SearchString" />
        @*$1$Mail: <input type="text" asp-for="SearchString" />#1#
        Virksomhed: <input type="text" asp-for="SearchString" />
        $1$Adresse: <input type="text" asp-for="SearchString" />#1#
        Bynavn: <input type="text" asp-for="SearchString" />*@
        <input type="submit" value="Filter" /> | <a asp-page="./ViewAll"> Tilbage til liste</a>
    </p>
</form>


<table class="table table-dark">
    <thead>
    <tr>
        @*<th>
            @Html.DisplayName("Id")
        </th>*@
        <th>
            <a asp-page="./ViewAll" asp-route-sortOrder="@Model.KontaktpersonSort">
                @Html.DisplayNameFor(model => model.KontaktpersonList[0].Person)
            </a>
        </th>
        <th>
            @Html.DisplayName("Tlf")
        </th>
        <th>
            @Html.DisplayName("Mail")
            
        </th>
        <th>Edit | Delete</th>
        
        
    </tr>
    </thead>
    
    <tbody>
    @foreach (var item in Model.KontaktpersonList)
    {
        <tr>
            @*<td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Person)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tlf)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mail)
            </td>
            <td>
                <a asp-page="./Update" asp-route-id="@item.Id"class="btn btn-outline-light btn-primary">Edit</a> |
                <a asp-page="./ViewAll" onclick="return confirm
                                        ('Are you sure you want to delete this item?');"
                   asp-page-handler="Delete" asp-route-id="@item.Id"class="btn btn-outline-light">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
