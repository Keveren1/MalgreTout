@page
@using MalgreTout.Models

@model ViewAllModel
<style>
    body {
        background: none;
        /*background-color: #A9A9A9;*/
        background-color: #696969;
    }
    th, td {
        border: 1px solid white;
        text-align:center;
        width:auto;
    }
    p{
        text-align:center;
        
    }
    h2{
        text-align:center;
    }
    .btn1{
        background-color:green;
        border:none;
        float:left;
        color: white;
        padding: 8px 15px;
        text-decoration:none;
        display: inline-block;
        font-size: 16px;
        border-radius: 10%;
    }
    a1{
        float:right;
        display:inline-block;
    }
    a{
       text-decoration: none;
    }

</style>
<h2>MalgreToutDatabase</h2>


<form asp-page="./ViewAll" method="get">
    <div class="form-actions no-color">
        <p>
            Find efter navn:
            <a class="btn1 btn-outline-light" href="/Create">Opret ny</a>
            <input type="text" name="SearchString" value="@Model.CurrentFilter" />
            <input type="submit" value="Søg" /> |
            <a style="color:#212529" asp-page="./ViewAll">Tilbage til liste</a>
            <a1> <input type="submit" style="direction:unset" value="Export til Excel" asp-page-handler="Export" /> </a1>
        </p>
    </div>
</form>


