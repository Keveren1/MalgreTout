<div class="hej">
    <h1>Malgré Tout Database</h1>
    <form method="post">
        <a1><input type="submit" value="Export til Excel" asp-page-handler="Export"></a1>
    </form>
</div>


<form asp-page="./ViewAll" method="get">
    <div class="form-actions no-color">
        <p>
            <a class="btn1 btn-success" href="/Create">Opret ny</a>
            <input type="text" placeholder="Hvad søger du?" name="SearchString" value="@Model.CurrentFilter" />
            <input type="submit" value="Søg" /> |
            <a style="color: white;" asp-page="./ViewAll">Tilbage til liste</a>
        </p>
    </div>
</form>

<table class="table table-dark">
    <thead>
        <tr>

            @*<th>
                <a style="color:white" asp-page="./ViewAll" asp-route-sortOrder="@Model.IdSort">
                    @Html.DisplayNameFor(model => model.NewAllUdleveringssted[0].Id)
                </a>
            </th>*@

            <th>
                <a style="color:white" asp-page="./ViewAll" asp-route-sortOrder="@Model.VirksomhedSort">
                    @Html.DisplayNameFor(model => model.NewAllUdleveringssted[0].Virksomhed)
                </a>
            </th>

            <th>
                <a style="color:white" asp-page="./ViewAll" asp-route-sortOrder="@Model.AdresseSort">
                    @Html.DisplayNameFor(model => model.NewAllUdleveringssted[0].Adresse)
                </a>
            </th>

            <th>
                <a style="color:white" asp-page="./ViewAll" asp-route-sortOrder="@Model.PostnrSort">
                    @Html.DisplayNameFor(model => model.NewAllUdleveringssted[0].Postnr)
                </a>
            </th>

            <th>
                <a style="color:white" asp-page="./ViewAll" asp-route-sortOrder="@Model.BynavnSort">
                    @Html.DisplayNameFor(model => model.NewAllUdleveringssted[0].Bynavn)
                </a>
            </th>

            <th>
                <a style="color:white" asp-page="./ViewAll" asp-route-sortOrder="@Model.PersonSort">
                    @Html.DisplayNameFor(model => model.NewAllUdleveringssted[0].Person)
                </a>
            </th>

            <th>
                <a style="color:white" asp-page="./ViewAll" asp-route-sortOrder="@Model.TlfSort">
                    @Html.DisplayNameFor(model => model.NewAllUdleveringssted[0].Tlf)
                </a>
            </th>

            <th>
                <a style="color:white" asp-page="./ViewAll" asp-route-sortOrder="@Model.MailSort">
                    @Html.DisplayNameFor(model => model.NewAllUdleveringssted[0].Mail)
                </a>
            </th>
                <th >Ændre | Slet </th>          
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model.NewAllUdleveringssted)
        {
            <tr>
                @*<td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Virksomhed)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Adresse)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Postnr)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Bynavn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Person)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tlf)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mail)
                </td>
                <td>
                    <a asp-page="./Update" asp-route-id="@item.Id" class="btn btn-primary">Ændre</a> |
                    <a asp-page="Delete" asp-route-id="@item.Id" class="btn btn-danger">Slet</a>
                </td>
        </tr>
    }
    </tbody>
</table>



