                    @Html.DisplayFor(modelItem => item.Tlf)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mail)
                </td>
                <td>
                    <a asp-page="./Update" asp-route-id="@item.Id" class="btn btn-primary">Ændre</a> |
                    <a asp-page="./ViewAll" onclick="return confirm
