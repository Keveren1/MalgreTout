<table class="table table-dark">
    <thead>
    <tr>
        @*<th>
            @Html.DisplayName("Id")
        </th>*@
        <th>
            <a asp-page="./ViewAll" asp-route-sortOrder="@Model.KontaktpersonSort">
                @Html.DisplayNameFor(model => model.KontaktpersonList[0].Person)
            </a>
        </th>
        <th>
            @Html.DisplayName("Tlf")
        </th>
        <th>
            @Html.DisplayName("Mail")
        </th>
        <th>
            <a asp-page="./ViewAll" asp-route-sortOrder="@Model.UdleveringsstedSort">
                @Html.DisplayNameFor(model => model.UdleveringsstedList[0].Virksomhed)
            </a>
        </th>
        <th>
            @Html.DisplayName("Adresse")
        </th>
        <th>
            <a asp-page="./ViewAll" asp-route-sortOrder="@Model.PostnrSort">
                @Html.DisplayNameFor(model => model.PostnumreList[0].Postnr)
            </a>
        </th>
        <th>
            @Html.DisplayName("Bynavn")
        </th>
        
        
        <th>Ændre | Slet</th>
    </tr>
    </thead>
    
    
    
    
    <tbody>
    @foreach (var item in Model.KontaktpersonList)
    {
        @foreach (var item2 in Model.UdleveringsstedList)
        {
            <tr>
                @*<td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item2.Virksomhed)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item2.Adresse)
                </td>
                <td>
                    <a asp-page="./Update" asp-route-id="@item.Id" class="btn btn-primary">Ændre</a> |
                    <a asp-page="./ViewAll" onclick="return confirm
                        ('Are you sure you want to delete this item?');"
                       asp-page-handler="Delete" asp-route-id="@item.Id" class="btn btn-danger">Slet</a>
                </td>
            </tr>
        }
        
        foreach (var item3 in Model.PostnumreList)
        {
            <tr>
                @*<td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item3.Postnr)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item3.Bynavn)
                </td>
                <td>
                    <a asp-page="./Update" asp-route-id="@item.Id" class="btn btn-primary">Ændre</a> |
                    <a asp-page="./ViewAll" onclick="return confirm
                        ('Are you sure you want to delete this item?');"
                       asp-page-handler="Delete" asp-route-id="@item.Id" class="btn btn-danger">Slet</a>
                </td>
            </tr>
        }
        
        
        <tr>
            @*<td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Person)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tlf)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mail)
            </td>
            <td>
                <a asp-page="./Update" asp-route-id="@item.Id" class="btn btn-outline-light btn-primary">Ændre</a> |
                <a asp-page="./ViewAll" onclick="return confirm
                                        ('Are you sure you want to delete this item?');"
                   asp-page-handler="Delete" asp-route-id="@item.Id" class="btn btn-danger">Slet</a>
            </td>
        </tr>
    }
    </tbody>
</table>
